<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.levare.hultic.ops.joborders.controller.NewJobOrderController"
      spacing="15" alignment="TOP_LEFT" style="-fx-padding: 20;">

    <!-- Заголовок -->
    <Label text="New Job Order" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Форма -->
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="100" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <!-- Ответственный -->
        <Label text="Responsible:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <ComboBox fx:id="responsibleCombo" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="250" />

        <!-- Комментарии -->
        <Label text="Comments:" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.valignment="TOP" />
        <TextArea fx:id="commentsArea" GridPane.rowIndex="1" GridPane.columnIndex="1"
                  prefRowCount="4" wrapText="true" />
    </GridPane>

    <!-- Кнопки действия -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="saveButton" text="Save" mnemonicParsing="false" />
        <Button fx:id="cancelButton" text="Cancel" mnemonicParsing="false" />
    </HBox>

</VBox>
